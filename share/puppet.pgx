pp_file: <list_of_resources>

list_of_resources: <resource>+

resource:
    <resource_type>
    /~<LCURLY>~/
    <wspace>
    <resource_name>
    <wspace>
    <resource_term>
    <wspace>
    /<RCURLY>/
    <wspace>

bare_word: /(\w+)/

# Fixme - foo or foo::bar or foo::bar::bazz
resource_type: <bare_word>

resource_name: /([\w<SLASH>]+):/ | /"([<SLASH>\w\s]+)":/

resource_term: <bare_word> /~=<RANGLE>~/ <bare_word>

wspace: /(?:<EOL>~)*/

